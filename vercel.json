{
  "version": 2,

  "builds": [
    {
      "src": "app/main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "app/static/**",
      "use": "@vercel/static"
    }
  ],

  "rewrites": [
    {
      "source": "/static/(.*)",
      "destination": "/app/static/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/app/main.py"
    }
  ],

  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],

  "env": {
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_KEY": "@supabase_key",
    "GROQ_API_KEY": "@groq_api_key",
    "GUMROAD_ACCESS_TOKEN": "@gumroad_access_token",
    "GUMROAD_PRODUCT_ID": "@gumroad_product_id",
    "GUMROAD_PRODUCT_URL": "@gumroad_product_url"
  },

  "regions": ["iad1"],
  "framework": null
}
