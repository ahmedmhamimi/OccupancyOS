{
  "version": 2,

  "builds": [
    {
      "src": "app/main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "app/static/**",
      "use": "@vercel/static"
    }
  ],

  "rewrites": [
    {
      "source": "/static/(.*)",
      "destination": "/app/static/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/app/main.py"
    }
  ],

  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],

  "env": {
    "SUPABASE_URL": "SUPABASE_URL",
    "SUPABASE_KEY": "SUPABASE_KEY",
    "GROQ_API_KEY": "GROQ_API_KEY",
    "GUMROAD_ACCESS_TOKEN": "GUMROAD_ACCESS_TOKEN",
    "GUMROAD_PRODUCT_ID": "GUMROAD_PRODUCT_ID",
    "GUMROAD_PRODUCT_URL": "GUMROAD_PRODUCT_URL"
  },

  "regions": ["iad1"],
  "framework": null
}
